    <TypeScriptToolsVersion>2.8</TypeScriptToolsVersion>
  </PropertyGroup>

  <ItemGroup>
    <None Remove="app.ts" />
  </ItemGroup>

  <ItemGroup>
    <None Include="wwwroot\app.js" />
